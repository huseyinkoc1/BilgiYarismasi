<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.h5190027.ardatunc.oyun_ekrani">


    <TextView
        android:id="@+id/tvSoruBaslik"
        android:layout_width="382dp"
        android:layout_height="133dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/buton_stil1"
        android:gravity="center"
        android:text="Soru başlığı"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="84dp"
        android:text="Puan"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCevapC"
        android:layout_width="156dp"
        android:layout_height="89dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/button_selector"
        android:text="C"
        android:textColor="#F3F3F3"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCevapA"
        app:layout_constraintVertical_bias="0.03" />

    <Button
        android:id="@+id/btnCevapD"
        android:layout_width="156dp"
        android:layout_height="89dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/button_selector"
        android:text="D"
        android:textColor="#F3F3F3"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCevapB"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnCevapA"
        android:layout_width="156dp"
        android:layout_height="89dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_selector"
        android:text="A"
        android:textColor="#F3F3F3"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSoruBaslik" />

    <Button
        android:id="@+id/btnCevapB"
        android:layout_width="156dp"
        android:layout_height="89dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_selector"
        android:text="B"
        android:textColor="#F3F3F3"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/btnCevapA"
        app:layout_constraintTop_toBottomOf="@+id/tvSoruBaslik" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="24dp"
        android:text="Soru"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvSoruBaslik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />


</androidx.constraintlayout.widget.ConstraintLayout>